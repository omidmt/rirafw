<%= javascript_include_tag "util" %>
<h1>Sign in</h1>
<%= form_for(:session, :url => sessions_path, :html => { :id => 'signinForm', :onsubmit => 'signin()' } ) do |f| %>
    <%= f.hidden_field :cyph %>
    <div class="field">
    <%= f.label :email %><br /> <%= f.text_field :email %> </div>
    <div class="field">
      <%= f.label :password %><br /> <%= f.password_field :password %>
    </div>
    <!-- Should enable cookie authentication first <div class="field">-->
      <!--<%=  f.label :remember_me %> <%=  f.check_box :remember_me %>-->
      <!--<p class="warninghint">Keep you sign in when closing browser</p>-->
    <!--</div>-->
    <div class="actions">
      <%= f.submit "Sign in", :class => 'minibutton'  %>
    </div>
<% end %>
<br />
