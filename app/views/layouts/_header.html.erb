
<header>
  <%logo = image_tag( "logo-256.png", :id => 'logo', :alt => "", :class => "round") %>
  <%= link_to logo, '#', :onclick => 'launchpad()' %>
  <nav class="round">
    <ul>
      <li><%= link_to("About", about_path) %></li>
      <li><%= link_to("Help", help_path) %></li>
      <% if signed_in? %>
          <li><%= link_to current_user.name, edit_user_setting_path(current_user) %></li>
          <li><%= link_to "Sign out", signout_path, :method => :delete %></li>
      <% else %>
        <li><%= link_to "Sign in", signin_path %></li>
      <% end %>
    </ul>
  </nav>
  <%= render 'home/launchpad' %>
  <script type="text/javascript">
    if( Modernizr.opacity )
        $('#logo').animate({"opacity":"0.4"},500).animate({"opacity":"1"},1500);
  </script>

</header>