<p id="notice"><%= notice %></p>

<div class="span-3 colborder">
  <label>Name</label><br>
  <%= @role.name%>
</div>

<div class="span-3 colborder">
  <label>Description</label><br>
  <%= @role.description%>
</div>

<div class="span-3 last">
  <label>Rights</label><br>
  <%= select(@role, :right_ids, Right.all(:order=>"controller, action ASC").collect { |x| ["#{x.controller} #{x.action}" , x.id]}, {:selected => @role.right_ids}, {:multiple => true, :disabled => true}) %>
</div>

<br/>
<hr>

<div class='button-group'>
<%= link_to 'Edit', edit_admin_role_path(@role), :class => 'minibutton' %>
<%= link_to 'Delete', admin_role_path(@role), method: :delete, data: { confirm: 'Are you sure you want to delete this role ? It removes permission of all users in this role.' }, :class => 'minibutton' %>
<%= link_to 'Back', admin_roles_path, :class => 'minibutton' %>
</div>